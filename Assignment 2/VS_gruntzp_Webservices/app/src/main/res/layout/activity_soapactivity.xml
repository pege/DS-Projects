<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_soapactivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.ethz.inf.vs.a2.gruntzp.vs_gruntzp_webservices.SOAPactivity">

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tempSOAP"
        android:layout_toEndOf="@+id/tempSOAP"
        android:layout_marginStart="17dp"
        android:id="@+id/valueSOAP"
        android:textSize="18sp" />

    <TextView
        android:text="@string/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="101dp"
        android:id="@+id/tempSOAP"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/manualSOAP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/valueSOAP"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="22dp"
        android:id="@+id/manualSOAP"
        android:onClick="getTemperature"/>

    <Button
        android:text="@string/librarySOAP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/librarySOAP"
        android:onClick="getTemperature"
        android:layout_alignBaseline="@+id/manualSOAP"
        android:layout_alignBottom="@+id/manualSOAP"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp" />
</RelativeLayout>
